<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase.menu_purchase_rfq" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0,[ref('purchase_invisible')])]"/>
        </record>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_ref" position="after">
                    <field name="project_id"/>
                    <field name="order_ref" domain="[('order_type', '=', 'quotation'), ('project_related_id', '!=', False), ('project_related_id', '=', project_id)]"/>
                    <field name="event_date_description" style="width:150%"/>
                    <field name="venue_description" style="width:150%"/>
                </field>
                <field name="date_planned" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="account_analytic_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="order_line" position="attributes">
                    <attribute name="context">{'operating_unit_id': operating_unit_id, 'order_ref': order_ref}</attribute>
                </field>
                <field name="product_id" position="before">
                    <field name="product_ref" context="{'order_ref': order_ref}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
