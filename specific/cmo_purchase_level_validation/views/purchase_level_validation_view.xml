<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        # Level Validation
        <record id="purchase_level_validation_tree" model="ir.ui.view">
            <field name="name">purchase.level.validation.tree</field>
            <field name="model">purchase.level.validation</field>
            <field name="arch" type="xml">
                <tree string="Project Position" editable="top">
                    <field name="level"/>
                    <field name="limit_amount"/>
                    <field name="user_ids" widget="many2many_tags" placeholder="Users..."/>
                </tree>
            </field>
        </record>
        <record id="action_purchase_level_validation" model="ir.actions.act_window">
            <field name="name">Level Validation</field>
            <field name="res_model">purchase.level.validation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Purhcase Level Validation
                </p>
                <p>
                    Manage Purhcase Level Validation you want to be used in the system.
                </p>
            </field>
        </record>
        <menuitem action="action_purchase_level_validation"
                  id="menu_action_purchase_level_validation"
                  parent="purchase.menu_purchase_config_purchase"
                  sequence="60"
                  groups="purchase.group_purchase_manager"/>
    </data>
</openerp>
