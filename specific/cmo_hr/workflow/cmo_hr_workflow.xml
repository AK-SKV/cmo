<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="act_validate" model="workflow.activity">
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">validate</field>
            <field name="kind">function</field>
            <field name="action">action_validate()</field>
        </record>

        <record id="t17" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_draft"/>
            <field name="act_to" ref="act_validate"/>
            <field name="signal">draft_to_validate</field>
            <field name="group_id" ref="base.group_hr_user"/>
        </record>

        <record id="t18" model="workflow.transition">
            <field name="act_from" ref="act_validate"/>
            <field name="act_to" ref="hr_expense.act_confirm"/>
            <field name="signal">confirm</field>
            <field name="group_id" ref="base.group_hr_user"/>
        </record>

        <record id="t19" model="workflow.transition">
            <field name="act_from" ref="act_validate"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref="base.group_hr_user"/>
        </record>

        <record id="t20" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_draft"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref="base.group_hr_user"/>
        </record>
    </data>
</openerp>
