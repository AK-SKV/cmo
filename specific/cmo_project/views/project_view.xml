<?xml version="1.0" ?>
<openerp>
    <data>
        # Project
        <record id="edit_project" model="ir.ui.view">
            <field name="name">edit.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group" position="after">
                    <group>
                        <group>
                            <field name="project_place"/>
                            <field name="agency"/>
                            <field name="client_type"/>
                            <field name="obligation"/>
                            <field name="function_id"/>
                        </group>
                        <group>
                            <field name="lead_source"/>
                            <field name="location"/>
                            <field name="description"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Team']" position="inside">
                        <group>
                          <group>
                              <field name="client_service"/>
                              <field name="designer"/>
                              <field name="procurement"/>
                              <field name="production"/>
                              <field name="project_manager"/>
                          </group>
                          <group>
                              <field name="creative"/>
                              <field name="graphic"/>
                              <field name="producer"/>
                              <field name="asst_production"/>
                          </group>
                        </group>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Other Info']/group[@string='Administration']" position="before">
                    <group string="Overview">
                        <field name="department"/>
                        <field name="project_budget"/>
                        <field name="estimate_cost"/>
                        <field name="brief_date"/>
                        <field name="project_from"/>
                        <field name="project_type"/>
                        <field name="competitor"/>
                    </group>
                </xpath>
            </field>
        </record>

        # Project Function
        <record id="view_project_function_form" model="ir.ui.view">
            <field name="name">project.function.form</field>
            <field name="model">project.function</field>
            <field name="arch" type="xml">
                <form string="Project Function">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_project_function_tree" model="ir.ui.view">
            <field name="name">project.function.tree</field>
            <field name="model">project.function</field>
            <field name="arch" type="xml">
                <tree string="Project Function">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_project_function_form" model="ir.actions.act_window">
            <field name="name">Project Function</field>
            <field name="res_model">project.function</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Project Function
                </p>
                <p>
                    Manage project function you want to be used in the system.
                </p>
            </field>
        </record>
        <menuitem action="action_project_function_form" id="menu_action_project_function_form" parent="base.menu_definitions" sequence="50" groups="project.group_project_manager"/>

        # Project Department
        <record id="view_project_function_form" model="ir.ui.view">
            <field name="name">project.department.form</field>
            <field name="model">project.department</field>
            <field name="arch" type="xml">
                <form string="Project Department">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="show"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_project_department_tree" model="ir.ui.view">
            <field name="name">project.department.tree</field>
            <field name="model">project.department</field>
            <field name="arch" type="xml">
                <tree string="Project department">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="show"/>
                </tree>
            </field>
        </record>
        <record id="action_project_department_form" model="ir.actions.act_window">
            <field name="name">Project Department</field>
            <field name="res_model">project.department</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Project Department
                </p>
                <p>
                    Manage project Department you want to be used in the system.
                </p>
            </field>
        </record>
        <menuitem action="action_project_department_form" id="menu_action_project_department_form" parent="base.menu_definitions" sequence="55" groups="project.group_project_manager"/>
    </data>
</openerp>
