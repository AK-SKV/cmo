<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        # Project list view
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="view_mode">tree,form,gantt</field>
        </record>

        <record id="view_project" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
              <xpath expr="/tree/field[@name='name']" position="before">
                  <field name="project_number"/>
              </xpath>
              <xpath expr="/tree/field[@name='user_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='partner_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='planned_hours']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='total_hours']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='effective_hours']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='progress_rate']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='state']" position="attributes">
                  <attribute name="string">Project Status</attribute>
              </xpath>
              <xpath expr="/tree/field[@name='state']" position="before">
                  <field name="brief_date"/>
                  <field name="date_start"/>
              </xpath>
              <xpath expr="/tree/field[@name='state']" position="after">
                  <field name="department"/>
                  <field name="partner_id" string="Customer"/>
                  <field name="project_from"/>
                  <field name="project_type"/>
                  <field name="agency"/>
                  <field name="client_type"/>
                  <field name="brand_type"/>
                  <field name="industry"/>
                  <field name="obligation"/>
                  <field name="function_id"/>
                  <field name="location"/>
                  <field name="project_place"/>
                  <field name="project_budget"/>
                  <field name="actual_price"/>
                  <field name="estimate_cost"/>
                  <field name="pre_cost"/>
                  <field name="actual_po"/>
                  <field name="close_reason"/>
              </xpath>
            </field>
        </record>

        # Project  # TODO Administration selection only public and access
        <record id="edit_project" model="ir.ui.view">
            <field name="name">edit.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='set_open']" position="before">
                    <button name="action_approve" type="object"
                            string="approve"
                            states="draft"
                            attrs="{'invisible':[['state', 'not in', ['draft']]]}"/>
                    <button name="action_back_to_draft" type="object"
                            string="back to draft"
                            states="open,pending,received,billing"
                            attrs="{'invisible':[['state', 'not in', ['open'],['pending'], ['complete']]]}"/>
                    <button name="action_billing" type="object"
                            string="Billing"
                            states="open,pending,received,billing"/>
                    <button name="action_received" type="object"
                            string="Received(dummy)"
                            states="open,pending,received,billing"
                            class="oe_highlight"/>
                </xpath>
                <xpath expr="/form/header/button[@name='set_cancel']" position="after">
                    <button name="%(action_project_close_reason)d"
                            type="action"
                            string="Close project"
                            states="draft,open,pending,received,billing"/>
                </xpath>
                <xpath expr="/form/header/button[@name='set_cancel']" position="attributes">
                    <attribute name="states">draft,open,pending,billing</attribute>
                </xpath>
                <xpath expr="/form/header/button[@name='set_done']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="string">Close Project(old no use)</attribute>
                </xpath>
                <xpath expr="/form/header/button[@name='set_pending']" position="attributes">
                    <attribute name="string">Hold</attribute>
                </xpath>
                <xpath expr="/form/header/field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,open,close</attribute>
                </xpath>
                <xpath expr="//field[@name='analytic_account_id']" position="before">
                  <div>
                      <h1>
                          <label for="name" class="oe_edit_only" string="Project Number"/>
                          <field name="project_number" string="Project Number" class="oe_inline"/>
                      </h1>
                  </div>
                </xpath>
                <xpath expr="//group/group/field[@string='Project Manager']" position="attributes">
                      <attribute name="invisible">1</attribute>
                      <attribute name="string">Project manager(no use)</attribute>
                </xpath>
                <xpath expr="//group/group/field[@string='Customer']" position="attributes">
                      <attribute name="invisible">1</attribute>
                      <attribute name="string">Customer(no use)</attribute>
                </xpath>
                <xpath expr="//group" position="after">
                    <group>
                        <field name="brief_date"/>
                        <field name="date_start" string="Start Date"/>
                        <field name="date" string="End Date"/>
                        <field name="close_reason" string="Close Reason"/>
                        <field name="parent_id"
                              string="Parent"
                              help="Append this project to another one using analytic accounts hierarchy"
                              domain="[('id','!=',analytic_account_id)]"
                              context="{'current_model': 'project.project'}"
                              />
                    </group>
                </xpath>
                <xpath expr="//notebook/page[@string='Team']/field[@name='members']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Team']/field[@name='members']" position="inside">
                    <attribute name="string">(no use)</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Team']" position="inside">
                    <field name="project_members" nolabel="1" widget="one2many_list">
                        <tree string="Team member" editable="bottom">
                            <field name="member_position"/>
                            <field name="team_member"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']/field[@name='active']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']/field[@string='Start Date']" position="attributes">
                   <attribute name="invisible">1</attribute>
                   <attribute name="string">Start Date(no use)</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']/field[@string='End Date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="string">End Date(no use)</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']/field[@name='sequence']" position="attributes">
                     <attribute name="invisible">1</attribute>
                     <attribute name="string">Sequence(no use)</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']/field[@string='Parent']" position="attributes">
                   <attribute name="invisible">1</attribute>
                   <attribute name="string">Parent(no use)</attribute>
                 </xpath>
                 <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']" position="inside">
                      <group>
                          <field name="active"/>
                          <group>
                            <field name="project_from"/>
                            <field name="project_type"/>
                            <field name="partner_id" on_change="onchange_partner_id(partner_id)" string="Customer"/>
                            <field name="agency"/>
                            <field name="client_type"/>
                            <field name="brand_type"/>
                          </group>
                          <group>
                            <field name="industry"/>
                            <field name="obligation"/>
                            <field name="function_id"/>
                            <field name="location"/>
                            <field name="project_place"/>
                          </group>
                      </group>
                  </xpath>
                 <xpath expr="//notebook/page[@string='Other Info']/group[@string='Miscellaneous']" position="after">
                    <group>
                        <field name="competitor"/>
                    </group>
                 </xpath>
                 <xpath expr="//notebook/page[@string='Project Stages']" position="before">
                    <page string="Budget &amp; Cost">
                        <group>
                            <field name="project_budget"/>
                            <field name="actual_price"/>
                            <field name="estimate_cost"/>
                            <field name="pre_cost"/>
                            <field name="actual_po"/>
                            <field name="remain_advance"/>
                            <field name="expense"/>
                        </group>
                    </page>
                 </xpath>
                 <xpath expr="//notebook" position="after">
                    <group>
                        <field name="description"/>
                    </group>
                 </xpath>
            </field>
        </record>
    </data>
</openerp>
